#include <iostream>

using namespace std;

int main()
{
    int num1, num2, result;
    char op;
    cout << "Enter number 1\n";
    cin >> num1;
    cout << "Enter number 2\n";
    cin >> num2;
    cout << "Enter an operator(+, -, *, /)\n";
    cin >> op;
    switch(op)
    {
    case '+':
        cout << num1 + num2;
        break;

    case'-':
        cout << num1 - num2;
        break;

    case'*':
        cout << num1 * num2;
        break;

    case'/':
        cout << num1 / num2;
        break;

    default:
        cout << "Invalid operator\n";
    }
    return 0;
}
