#include <iostream>

using namespace std;

int main()
{
    int a, b;
    float c, d;
    cout << "Enter a, b\n";
    cin >> a >> b;
    cout << "Enter c, d\n";
    cin >> c, d;
    cout << "a + b :" << a + b << endl;
    cout << "c + d :"<< c + d << endl;
    cout << "a - b :"<< a - b << endl;
    cout << "c - d :" << c - d << endl;
    cout << "a * b :"<< a * b << endl;
    cout << "c * d :" << c * d << endl;
    cout << "a / b :" << a / b << endl;
    cout << "c / d :" << c / d << endl;
    return 0;
}
